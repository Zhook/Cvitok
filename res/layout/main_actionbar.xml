<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actionBar_imageButton_flower"
            android:src="@drawable/ic_action_flower"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/fragment_flower_background"
            android:layout_alignBottom="@+id/actionBar_imageButton_petals"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actionBar_imageButton_petals"
            android:src="@drawable/ic_action_petal"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/actionBar_imageButton_flower"
            android:contentDescription="@string/fragment_flower_petals"/>
</RelativeLayout>