<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_petals_spinner_petals"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/fragment_petals_imageButton_addPetal"
            android:layout_alignBottom="@+id/fragment_petals_imageButton_addPetal"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_petals_imageButton_addPetal"
            android:src="@drawable/ic_action_add_petal"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/fragment_flower_background"
            android:layout_toLeftOf="@+id/fragment_petals_imageButton_delPetal"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_petals_imageButton_delPetal"
            android:src="@drawable/ic_action_del_petal"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/fragment_flower_background"
            android:layout_toLeftOf="@+id/fragment_petals_button_vertices"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_petals_button_vertices"
            android:src="@drawable/ic_action_vertices"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/fragment_flower_background"/>
</RelativeLayout>